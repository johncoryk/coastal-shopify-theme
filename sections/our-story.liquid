<section class="our-story">
  <div class="our-story__container container margin-block--med">
    <h1>{{ section.settings.story_heading }}</h1>
    {{ section.settings.story_contents }}
  </div>
</section>

{% schema %}

{
  "name": "Our Story",
    "settings": [
      {
        "type": "text",
        "id": "story_heading",
        "label": "Story Heading",
        "default": "Our Story",
        "placeholder": "Our Story"
      }, {
        "type": "textarea",
        "id": "story_contents",
        "label": "Story Contents",
        "default": "<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Neque inventore ducimus, excepturi culpa natus impedit deleniti similique doloremque alias vero!</p>"
                                                                                                                                                                }
                                                                                                                                                              ]
                                                                                                                                                            }

{% endschema %}