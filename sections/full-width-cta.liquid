<section class="full-width-cta">
  <div class="full-width-cta__container">
    <a href={{ section.settings.cta-url }}>
      {{ section.settings.cta-image | img_url:'1200x' | img_tag: section.settings.cta-image.alt }}
    </a>
  </div>
</section>


{% schema %}

{
  "name": "Full Width CTA",
  "settings": [
    {
      "type": "image_picker",
      "id": "cta-image",
      "label": "CTA Image"
    }, {
      "type": "url",
      "id": "cta-url",
      "label": "CTA url"
    }
  ],
  "presets": [
    {
      "category": "Images",
      "name": "Full Width CTA"
    }
  ]
}

{% endschema %}

{% stylesheet %}
@media only screen and (min-width: 768px) {
    .full-width-cta {
      max-width: 2100px;
      margin: 0 auto;
    }

    .full-width-cta__container {
      margin-bottom: 2.25rem;
    }

    img {
      display: block;
      margin: 0 auto;
      width: 100%;
      max-height: 750px;
      object-fit: cover;
    }
  }
{% endstylesheet %}