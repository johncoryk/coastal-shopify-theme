/*================ Basic Resets ================*/
*,
:after,
:before,
html {
	box-sizing: border-box;
	margin: 0;
	padding: 0;
}

body {
	font-family: sans-serif;
	color: var(--primary);
}

a {
	color: var(--link-primary);
	text-decoration: none;
	transition: all ease 150ms;
}

a:hover {
	color: var(--link-accent);
}

ul {
	list-style: none;
}

img {
	display: block;
	margin: 0 auto;
	width: 100%;
}

/*================ Colors ================*/
:root {
	--primary: {{ settings.color_text_primary }};
	--accent: {{ settings.color_text_accent }};
	--link-primary: {{ settings.color_link_primary }};
	--link-accent: {{ settings.color_link_accent }};
}

/*================ Helpers ================*/
.container {
	padding: 0.25rem 1rem;
	max-width: 1800px;
	margin: 0 auto;
}

.flex--row {
	display: flex;
	flex-direction: row;
}

.flex--column {
	display: flex;
	flex-direction: column;
}

.text-center {
	text-align: center;
}

.text-uppercase {
	text-transform: uppercase;
}

.margin-block--med {
	margin-block: 1.85rem;
}

.margin-block--lg {
	margin-block: 3.5rem;
}

/*================ Sections ================*/
/* HEADER */
.header-container {
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
	width: min(90%, 1450px);
	margin: 1rem auto 1.5rem;
	padding: 1.5rem 1.25rem;
	position: relative;
}

.header__logo {
	padding: 0 2rem;
}

/* FULL WIDTH CTA */
.full-width-cta {
	max-width: 2100px;
	margin: 0 auto;
}

/* VALUE PROPS */
.value-props {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.value-prop__container {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	margin: 1.5rem;
	padding-block: 1.5rem;
}

.value-prop__icon svg {
	width: 60px;
}

.value-prop__text {
	margin-top: 0.25rem;
	text-align: center;
	width: min(80%, 225px);
}

@media only screen and (min-width: 1020px) {
	.value-props {
		flex-direction: row;
	}
}

/* FEATURED COLLECTION */
.featured-collection__section-header h2 {
	letter-spacing: 1.75px;
}

.featured-collection__container {
	justify-content: center;
	align-items: center;
}

.featured-collection__container .product__container {
	width: min(50%, 400px);
	align-items: center;
	margin-bottom: 1.75rem;
}

.featured-collection__container .product-image__container {
	transition: transform ease 150ms;
}

.featured-collection__container .product-image__container:hover {
	transform: scale(1.01);
}

.featured-collection__container .product-info__container {
	text-align: center;
	margin-top: .75rem;
}

.featured-collection__container .product-info__container h3 {
	letter-spacing: 1.75px;
	margin-bottom: .25rem;
}

.featured-collection__container .product-info__container .product-info__price {
	color: #797979;
	font-weight: lighter;
	letter-spacing: 1.8px;
}

@media only screen and (min-width: 1020px) {
	.featured-collection__container {
		flex-direction: row;
		justify-content: space-evenly;
	}

	.featured-collection__container .product__container {
		margin-bottom: 0;
	}

	.featured-collection__container .product__container:not(:first-child):not(:last-child) {
		margin-inline: 4rem;
	}
}

/*================ Snippets ================*/
/* SITE NAV */
.site-nav--desktop {
	display: none;
}

.site-nav__hamburger {
	position: absolute;
	left: 0;
	margin-left: 1.2rem;
}

.site-nav__user-links {
	position: absolute;
	left: 0;
	margin-left: 1.2rem;
}

.site-nav__user-links a:not(:first-child) {
	padding-left: 1.85rem;
}

.site-nav__user-links a:hover {
	color: var(--link-accent);
}

.site-nav__hamburger {
	width: 30px;
}

@media only screen and (min-width: 768px) {
	.site-nav--mobile {
		display: none;
	}

	.site-nav--desktop {
		display: inline-block;
	}
}
